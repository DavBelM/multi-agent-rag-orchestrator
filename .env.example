# Multi-Agent RAG Orchestrator Environment Configuration

# ================================
# LLM PROVIDER CONFIGURATIONS
# ================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229
ANTHROPIC_MAX_TOKENS=4000

# Cohere Configuration (Optional)
COHERE_API_KEY=your_cohere_api_key_here
COHERE_MODEL=command-r-plus

# Together AI Configuration (Optional)
TOGETHER_API_KEY=your_together_api_key_here

# ================================
# AGENT CONFIGURATION
# ================================

# Agent Specializations
RESEARCH_AGENT_MODEL=gpt-4-turbo-preview
ANALYSIS_AGENT_MODEL=claude-3-opus-20240229
WRITING_AGENT_MODEL=gpt-4-turbo-preview
COORDINATOR_AGENT_MODEL=gpt-4-turbo-preview
VALIDATION_AGENT_MODEL=claude-3-opus-20240229

# Agent Performance Settings
MAX_PARALLEL_AGENTS=5
AGENT_TIMEOUT_SECONDS=120
AGENT_RETRY_ATTEMPTS=3
AGENT_MEMORY_SIZE=10

# Workflow Configuration
DEFAULT_WORKFLOW_TYPE=collaborative
ENABLE_AGENT_REFLECTION=true
ENABLE_CONSENSUS_BUILDING=true
QUALITY_THRESHOLD=0.8

# ================================
# VECTOR STORE CONFIGURATION
# ================================

# ChromaDB Settings
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
CHROMA_COLLECTION_NAME=multi_agent_kb
CHROMA_DISTANCE_FUNCTION=cosine

# FAISS Settings (Alternative)
FAISS_INDEX_PATH=./data/faiss_index
FAISS_DIMENSION=1536

# Pinecone Settings (Optional)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=multi-agent-rag

# ================================
# DATABASE CONFIGURATION
# ================================

# PostgreSQL (State Management)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/multiagent_rag
POSTGRES_USER=multiagent_user
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=multiagent_rag
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis (Caching & Message Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ================================
# WEB INTERFACE CONFIGURATION
# ================================

# FastAPI Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
API_LOG_LEVEL=info

# Streamlit Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST=0.0.0.0

# Authentication
JWT_SECRET_KEY=your_super_secret_jwt_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
API_KEY=your_api_key_for_authentication

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8501"]
CORS_ALLOW_CREDENTIALS=true

# ================================
# MONITORING & LOGGING
# ================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/multiagent_rag.log
ENABLE_FILE_LOGGING=true
ENABLE_STRUCTURED_LOGGING=true

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics

# Tracing (Jaeger)
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
ENABLE_TRACING=false

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=30

# ================================
# WORKFLOW & PERFORMANCE
# ================================

# Document Processing
MAX_DOCUMENT_SIZE_MB=100
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=500

# Query Processing
MAX_QUERY_LENGTH=2000
DEFAULT_TOP_K=10
MAX_SEARCH_RESULTS=50
ENABLE_QUERY_CACHING=true

# Performance Optimization
ENABLE_ASYNC_PROCESSING=true
MAX_CONCURRENT_QUERIES=20
RESPONSE_TIMEOUT_SECONDS=300
ENABLE_RESULT_STREAMING=true

# ================================
# SECURITY CONFIGURATION
# ================================

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
ENABLE_INPUT_VALIDATION=true
ENABLE_CONTENT_FILTERING=true

# Data Privacy
ENABLE_DATA_ENCRYPTION=true
ENCRYPTION_KEY=your_encryption_key_here
ENABLE_AUDIT_LOGGING=true

# ================================
# DEVELOPMENT & TESTING
# ================================

# Environment
ENVIRONMENT=development
DEBUG=true
ENABLE_HOT_RELOAD=true

# Testing
TEST_DATABASE_URL=postgresql+asyncpg://test:test@localhost:5432/multiagent_test
ENABLE_TEST_MODE=false
MOCK_LLM_RESPONSES=false

# Development Tools
ENABLE_API_DOCS=true
ENABLE_PROFILING=false
ENABLE_DEBUG_TOOLBAR=false

# ================================
# AGENT BEHAVIORAL SETTINGS
# ================================

# Research Agent
RESEARCH_SEARCH_DEPTH=comprehensive
RESEARCH_SOURCE_LIMIT=20
RESEARCH_CONFIDENCE_THRESHOLD=0.7

# Analysis Agent
ANALYSIS_REASONING_STYLE=analytical
ANALYSIS_ENABLE_BIAS_DETECTION=true
ANALYSIS_MULTI_PERSPECTIVE=true

# Writing Agent
WRITING_STYLE=professional
WRITING_MAX_LENGTH=2000
WRITING_ENABLE_CITATIONS=true

# Validation Agent
VALIDATION_FACT_CHECK_ENABLED=true
VALIDATION_BIAS_THRESHOLD=0.3
VALIDATION_QUALITY_THRESHOLD=0.8

# Coordinator Agent
COORDINATOR_STRATEGY=adaptive
COORDINATOR_ENABLE_OPTIMIZATION=true
COORDINATOR_MAX_ITERATIONS=3

# ================================
# EXPERIMENTAL FEATURES
# ================================

# Advanced Features (Enable with caution)
ENABLE_MULTI_MODEL_CONSENSUS=false
ENABLE_SELF_REFLECTION=false
ENABLE_AGENT_LEARNING=false
ENABLE_DYNAMIC_ROUTING=true
ENABLE_REAL_TIME_COLLABORATION=true

# Beta Features
ENABLE_VOICE_INTERFACE=false
ENABLE_VISUAL_PROCESSING=false
ENABLE_FEDERATED_AGENTS=false
